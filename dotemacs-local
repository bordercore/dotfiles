;; Use the new defthemes system for Emacs 24 color themes

(cond
 ((string-match "GNU Emacs 24" (emacs-version))
  (load-theme 'deeper-blue t)  ;; Choose your color theme here
  )
 )

;; Set the 'org-hide' face to match the background color of your theme
;;  so that leading stars are hidden in your outlines.

(custom-set-faces
 '(org-hide ((t (:foreground "#000000")))))
