# User identification
[user]
    name = F. Jerrell Schivers
    email = jerrell@bordercore.com

# Color and display settings
[color]
    ui = true
[color "diff"]
    meta = yellow
    frag = cyan
    old = white
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

# Core Git behavior
[core]
    # Use delta if available, otherwise fall back to less
    pager = sh -c 'command -v delta >/dev/null 2>&1 && delta || less'
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch]
    autosetuprebase = always

# Custom command aliases
[alias]
    co = "!f() { git checkout $(git branch --all | grep \"$1\" | grep -v HEAD | head -n 1 | sed 's/^[* ] //;s#remotes/[^/]*/##'); }; f"
    glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --date=format:%m-%d-%Y
    l = log --oneline --decorate
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    s = status -sb
    st = stash list --format='%gd %cd %s'
    undo = reset --soft HEAD^

# Credential storage (cross-platform: libsecret for Linux, osxkeychain for macOS)
[credential]
    helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
    helper = osxkeychain

# Diff and merge settings
[diff]
    colorMoved = default
[interactive]
    # Use delta if available, otherwise fall back to cat (pass-through)
    diffFilter = sh -c 'command -v delta >/dev/null 2>&1 && delta --color-only || cat'
[delta]
    navigate = true    # use n and N to move between diff sections
[merge]
    conflictstyle = diff3

# Status and push behavior
[status]
    # show individual files in untracked directories
    showUntrackedFiles = all
[push]
    default = simple

# Security: trusted repository directories
# Machine-specific safe directories are configured in ~/.gitconfig.local
# See git/.gitconfig.local.example for template

# Include local overrides (if file exists)
[include]
    path = ~/.gitconfig.local

# Git LFS (Large File Storage) filter configuration
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
